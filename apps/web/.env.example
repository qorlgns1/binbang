# ===========================================
# apps/web/.env.local example
# ===========================================
# NOTE: common vars(DATABASE_URL/NEXTAUTH_SECRET/GOOGLE_*/KAKAO_*) are read from root .env

# App-specific override (required)
NEXTAUTH_URL=http://localhost:3000

# Worker internal URL for worker reload endpoint
WORKER_INTERNAL_URL=http://localhost:3500

# Required if Google Form webhook endpoint is enabled
GOOGLE_FORM_WEBHOOK_SECRET=replace-with-random-secret

# Required for local docker compose
WEB_PORT=3000

# Optional email fallback
RESEND_API_KEY=re_xxx
EMAIL_FROM="BinBang <noreply@example.com>"

# Optional monitoring
HEARTBEAT_INTERVAL_MS=60000
HEARTBEAT_MISSED_THRESHOLD=1
WORKER_HEALTHY_THRESHOLD_MS=2400000
WORKER_DEGRADED_THRESHOLD_MS=5400000

# Optional public metadata/analytics
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXX
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=
NEXT_PUBLIC_NAVER_SITE_VERIFICATION=
