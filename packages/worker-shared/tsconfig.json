{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2023", "dom", "dom.iterable"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "paths": {
      "@/*": ["src/*"],
      "@workspace/db": ["../db/src"],
      "@workspace/shared": ["../shared/src"],
      "@workspace/shared/i18n": ["../shared/src/i18n"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../db" }, { "path": "../shared" }]
}
