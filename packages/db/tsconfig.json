{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/generated/*": ["./generated/*"]
    }
  },
  "include": ["src/**/*.ts", "generated/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
