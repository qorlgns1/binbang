{
  "name": "accommodation-monitor",
  "version": "2.11.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "with-env": "dotenv -e .env -e .env.local --",
    "with-env:all": "dotenv -e .env -e .env.local -e .env.development -e .env.production --",
    "dev": "pnpm with-env turbo run dev",
    "dev:web": "pnpm with-env turbo run dev --filter=@workspace/web",
    "dev:worker": "pnpm with-env turbo run dev --filter=@workspace/worker",
    "build": "pnpm with-env:all turbo run build",
    "build:web": "pnpm with-env:all turbo run build --filter=@workspace/web",
    "build:worker": "pnpm with-env:all turbo run build --filter=@workspace/worker",
    "start": "pnpm with-env:all turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "pnpm with-env:all turbo run test",
    "typecheck": "pnpm with-env:all turbo run typecheck",
    "ci:check": "pnpm with-env:all turbo run lint typecheck test build",
    "db:generate": "pnpm with-env:all turbo run db:generate --filter=@workspace/db",
    "db:push": "pnpm with-env:all pnpm --filter @workspace/db db:push",
    "db:migrate": "pnpm with-env:all pnpm --filter @workspace/db db:migrate",
    "db:migrate:deploy": "pnpm with-env:all pnpm --filter @workspace/db db:migrate:deploy",
    "db:seed": "pnpm with-env:all pnpm --filter @workspace/db db:seed",
    "db:studio": "pnpm with-env:all pnpm --filter @workspace/db db:studio",
    "clean": "turbo run clean && rm -rf node_modules",
    "local:docker": "docker compose -f docker/docker-compose.local.yml"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.6",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.2.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "turbo": "^2.5.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24.13.0 <25"
  }
}
