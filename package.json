{
  "name": "binbang",
  "version": "2.29.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "with-env:local": "dotenv -e .env -e .env.local --",
    "with-env:development": "dotenv -e .env.development --",
    "with-env:development:host": "dotenv -e .env.development.local -e .env.development --",
    "with-env:production": "dotenv -e .env.production --",
    "with-env:production:host": "dotenv -e .env.production.local -e .env.production --",
    "dev": "pnpm with-env:local turbo run dev",
    "dev:web": "pnpm with-env:local turbo run dev --filter=@workspace/web",
    "dev:worker": "pnpm with-env:local turbo run dev --filter=@workspace/worker",
    "build": "pnpm with-env:local turbo run build",
    "build:web": "pnpm with-env:local turbo run build --filter=@workspace/web",
    "build:worker": "pnpm with-env:local turbo run build --filter=@workspace/worker",
    "build:development": "pnpm with-env:development turbo run build",
    "build:production": "pnpm with-env:production turbo run build",
    "start": "pnpm with-env:local turbo run start",
    "start:development": "pnpm with-env:development turbo run start",
    "start:production": "pnpm with-env:production turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --write",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "pnpm with-env:local turbo run test",
    "typecheck": "pnpm with-env:local turbo run typecheck",
    "ci:check": "pnpm with-env:local turbo run lint typecheck test build && pnpm format:check",
    "db:generate": "pnpm with-env:local turbo run db:generate --filter=@workspace/db",
    "db:push:forbidden": "echo \"Forbidden by rules.md: use db:migrate instead\" && exit 1",
    "db:migrate": "pnpm with-env:local pnpm --filter @workspace/db db:migrate",
    "db:migrate:deploy": "ENV=${APP_ENV:-development}; pnpm with-env:$ENV pnpm --filter @workspace/db db:migrate:deploy",
    "db:seed": "pnpm db:seed:local",
    "db:seed:local": "pnpm with-env:local pnpm --filter @workspace/db db:seed",
    "db:seed:deploy": "ENV=${APP_ENV:-development}; pnpm with-env:$ENV pnpm --filter @workspace/db db:seed:base",
    "db:studio": "pnpm with-env:local pnpm --filter @workspace/db db:studio",
    "clean": "turbo run clean && rm -rf node_modules",
    "local:docker": "docker compose -f docker/docker-compose.local.yml",
    "update:ai-context": "node scripts/update-ai-context.mjs",
    "i18n:check": "node scripts/i18n/check.mjs",
    "i18n:typegen": "node scripts/i18n/typegen.mjs",
    "i18n:ci": "pnpm i18n:typegen && pnpm i18n:check"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "dotenv-cli": "^11.0.0",
    "turbo": "^2.5.3",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24.13.0 <25"
  }
}
