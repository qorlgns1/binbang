{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "packages/db/prisma/schema.prisma",
    ".env",
    ".env.local",
    ".env.development",
    ".env.production"
  ],
  "globalPassThroughEnv": ["DATABASE_URL"],
  "tasks": {
    "db:generate": {
      "cache": false,
      "outputs": ["generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["@workspace/db#db:generate"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.mjs"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts", "**/*.test.tsx"]
    },
    "typecheck": {
      "dependsOn": ["@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    }
  },
  "ui": "tui"
}
