{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "packages/db/prisma/schema.prisma",
    ".env",
    ".env.local",
    ".env.development",
    ".env.development.local",
    ".env.production",
    ".env.production.local"
  ],
  "globalPassThroughEnv": [
    "DATABASE_URL",
    "REDIS_URL",
    "APP_ENV",
    "WEB_PORT",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "GOOGLE_FORM_WEBHOOK_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "KAKAO_CLIENT_ID",
    "KAKAO_CLIENT_SECRET"
  ],
  "tasks": {
    "db:generate": {
      "cache": false,
      "outputs": ["generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["@workspace/db#db:generate"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "biome.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts", "**/*.test.tsx"]
    },
    "typecheck": {
      "dependsOn": ["@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
    },
    "@workspace/web#typecheck": {
      "dependsOn": ["@workspace/web#build", "@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
    },
    "@workspace/worker#typecheck": {
      "dependsOn": ["@workspace/worker-shared#build", "@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    }
  },
  "ui": "tui"
}
