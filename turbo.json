{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["packages/db/prisma/schema.prisma", ".env"],
  "tasks": {
    "db:generate": {
      "cache": false,
      "outputs": ["src/generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["@workspace/db#db:generate"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.mjs"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts", "**/*.test.tsx"]
    },
    "typecheck": {
      "dependsOn": ["@workspace/db#db:generate"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
    }
  },
  "ui": "tui"
}
